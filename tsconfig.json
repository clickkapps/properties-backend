{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
     "outDir": "dist", // js distribution folder
     "noEmitOnError": true, // whether it should NOT compile to js if type errors are found
    "allowJs": true, // whether js files should be allowed in the project
    "checkJs": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/**/*",
    ".sequelizerc"
  ],
  "files": ["src/helpers/type-extensions.d.ts"],
  "exclude": ["node_modules"]
}
